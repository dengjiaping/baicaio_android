<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_activity_bg"
    android:orientation="vertical"
    tools:context="com.cnxxp.cabbagenet.activity.AddressManagerActivity">

    <include layout="@layout/activity_title" />

    <com.cnxxp.cabbagenet.xrecyclerview.XRecyclerView
        android:id="@+id/mXRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.cnxxp.cabbagenet.xrecyclerview.XRecyclerView>

    <RelativeLayout
        android:background="@color/color_title_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
<LinearLayout
    android:id="@+id/ll_add_bg"
    android:gravity="center_vertical"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ImageView
        android:src="@mipmap/ic_my_add"
        android:layout_width="15dp"
        android:layout_height="15dp" />
    <TextView
        android:layout_marginLeft="@dimen/margin_5"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="添加新地址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    </RelativeLayout>
</LinearLayout>
