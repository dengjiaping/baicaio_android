<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfect_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_activity_bg"
    android:orientation="vertical"
    tools:context="com.cnxxp.cabbagenet.activity.PerfectInfoActivity">

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/common_margin_10"
        android:layout_marginRight="@dimen/common_margin_10"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="用  户  名:"
            android:textColor="@color/color_text_3"
            android:textSize="14sp" />

        <com.cnxxp.cabbagenet.view.ContainsEmojiEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin_10"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:inputType="text"
            android:textColor="@color/color_text_3"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/view_w_line" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/common_margin_10"
        android:layout_marginRight="@dimen/common_margin_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="登录密码:"
            android:textColor="@color/color_text_3"
            android:textSize="14sp" />

        <com.cnxxp.cabbagenet.view.ContainsEmojiEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin_10"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请设置登录密码"
            android:inputType="text"
            android:textColor="@color/color_text_3"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/view_w_line" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/common_margin_10"
        android:layout_marginRight="@dimen/common_margin_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="邮        箱:"
            android:textColor="@color/color_text_3"
            android:textSize="14sp" />

        <com.cnxxp.cabbagenet.view.ContainsEmojiEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin_10"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入邮箱"
            android:inputType="text"
            android:textColor="@color/color_text_3"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/view_w_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/common_margin_10"
        android:layout_marginRight="@dimen/common_margin_10"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="性         别:"
            android:textColor="@color/color_text_3"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_man"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="男"
                android:textColor="@color/color_text_3"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_man"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/common_margin_10"
                android:src="@drawable/single_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_woman"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="女"
                android:textColor="@color/color_text_3"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_woman"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/common_margin_10"
                android:src="@drawable/single_selector" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/green_shape"
        android:gravity="center"
        android:text="提    交"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</LinearLayout>
