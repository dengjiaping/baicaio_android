<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bind_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_activity_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.cnxxp.cabbagenet.activity.BindPhoneActivity">

    <include layout="@layout/activity_title" />

    <ImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:src="@mipmap/ic_bind_success" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/common_margin_10"
        android:orientation="horizontal">

        <TextView
            style="@style/text_14sp_color10_center_v"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="已绑定手机:" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/text_14sp_color10_center_v"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="15618494846" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_rebind"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_title_bg"
        android:gravity="center"
        android:text="重新验证"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</LinearLayout>
