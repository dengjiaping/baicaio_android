<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cnxxp.cabbagenet.activity.ChangeNameActivity">

    <include layout="@layout/activity_title" />
    <EditText
        android:id="@+id/et_input"
        android:background="@android:color/white"
        android:hint="请输入您的新昵称"
        android:gravity="center_vertical"
        android:textColor="@color/color_text_3"
        android:textSize="12sp"
        android:textColorHint="@color/color_toast_background"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_title_bg"/>
</LinearLayout>
