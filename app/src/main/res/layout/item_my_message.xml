<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="@dimen/common_margin_10">

        <ImageView
            android:id="@+id/iv_message_face"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_square_pic" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin_10"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_message_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="系统消息"
                android:textColor="@color/color_text_3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="昨天"
                android:textColor="@color/color_text_9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_message_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="订单已发货！您购买的日式保温便携撒大声大声道啊实打实大师"
                android:textColor="#999999"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

    <View style="@style/view_w_line" />
</LinearLayout>