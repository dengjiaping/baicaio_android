<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_activity_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/common_margin_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin_10"
        android:paddingRight="@dimen/common_margin_10">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_phone" />

        <EditText
            android:id="@+id/et_enter_phone"
            style="@style/text_14sp_color10_center_v"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/common_margin_10"
            android:background="@color/color_activity_bg"
            android:hint="请输入登录手机号码"
            android:inputType="phone" />

    </LinearLayout>

    <View
        style="@style/view_w_line"
        android:layout_margin="@dimen/margin_5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/common_margin_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin_10"
        android:paddingRight="@dimen/common_margin_10">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_security_code" />

        <EditText
            android:id="@+id/et_enter_code"
            style="@style/text_14sp_color10_center_v"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/common_margin_10"
            android:layout_marginRight="@dimen/common_margin_10"
            android:layout_weight="1"
            android:background="@color/color_activity_bg"
            android:hint="请输入验证码"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv_get_security_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_shape"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/common_margin_10"
            android:paddingRight="@dimen/common_margin_10"
            android:paddingTop="@dimen/margin_5"
            android:text="获取验证码"

            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        style="@style/view_w_line"
        android:layout_margin="@dimen/margin_5" />

  

    <TextView
        android:id="@+id/tv_regist_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/green_shape"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

   

</LinearLayout>