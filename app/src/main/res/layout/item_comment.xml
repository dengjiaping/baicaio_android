<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/common_margin_10"
        android:layout_marginRight="@dimen/common_margin_10"
        android:layout_marginTop="@dimen/common_margin_10">

        <ImageView
            android:id="@+id/iv_comment_face"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_toRightOf="@id/iv_comment_face"
            android:gravity="center_vertical"
            android:textColor="@color/color_text_3"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/commnent_like"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_margin_10"
            android:src="@mipmap/ic_like_n" />

        <TextView
            android:id="@+id/tv_likes"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/commnent_like"
            android:gravity="center_vertical"
            android:textColor="@color/color_text_6"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lc"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:textColor="@color/color_text_3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin_10"
            android:textColor="@color/color_text_9"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin_10"
        android:paddingRight="@dimen/common_margin_10">


        <TextView
            android:textColor="@color/color_text_3"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:id="@+id/tv_comment_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_other_hf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_10"
        android:layout_marginRight="@dimen/common_margin_10"
        android:background="#f2f2f2"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone">

    </LinearLayout>


    <View
        style="@style/view_w_line"
        android:layout_marginTop="@dimen/common_margin_10" />
</LinearLayout>