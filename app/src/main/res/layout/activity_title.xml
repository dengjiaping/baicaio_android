<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/main_title_bg"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/color_title_bg"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/activity_back_bg"
            android:layout_width="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:onClick="onTitleBack"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/shop_image_back"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_title_text"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:text="主界面" />
        <LinearLayout
            android:id="@+id/activity_more_image_bg"
            android:layout_width="50dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/activity_more_image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@mipmap/activity_title_more"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_more_text_bg"
            android:layout_width="50dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/activity_more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:text="更多" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>