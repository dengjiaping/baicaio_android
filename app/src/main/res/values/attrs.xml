<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- XRecyclerView start -->
    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="indicator">
            <flag name="BallPulse" value="0" />
            <flag name="BallGridPulse" value="1" />
            <flag name="BallClipRotate" value="2" />
            <flag name="BallClipRotatePulse" value="3" />
            <flag name="SquareSpin" value="4" />
            <flag name="BallClipRotateMultiple" value="5" />
            <flag name="BallPulseRise" value="6" />
            <flag name="BallRotate" value="7" />
            <flag name="CubeTransition" value="8" />
            <flag name="BallZigZag" value="9" />
            <flag name="BallZigZagDeflect" value="10" />
            <flag name="BallTrianglePath" value="11" />
            <flag name="BallScale" value="12" />
            <flag name="LineScale" value="13" />
            <flag name="LineScaleParty" value="14" />
            <flag name="BallScaleMultiple" value="15" />
            <flag name="BallPulseSync" value="16" />
            <flag name="BallBeat" value="17" />
            <flag name="LineScalePulseOut" value="18" />
            <flag name="LineScalePulseOutRapid" value="19" />
            <flag name="BallScaleRipple" value="20" />
            <flag name="BallScaleRippleMultiple" value="21" />
            <flag name="BallSpinFadeLoader" value="22" />
            <flag name="LineSpinFadeLoader" value="23" />
            <flag name="TriangleSkewSpin" value="24" />
            <flag name="Pacman" value="25" />
            <flag name="BallGridBeat" value="26" />
            <flag name="SemiCircleSpin" value="27" />
        </attr>
        <attr name="indicator_color" format="color" />
    </declare-styleable>
    <!-- XRecyclerView end -->

    <!--流式布局-->
    <declare-styleable name="MultiLineChooseItemTags">

        <attr name="item_backgroundColor" format="reference|color" />
        <attr name="item_selectedBackgroundColor" format="reference|color" />

        <attr name="item_horizontalSpacing" format="dimension" />
        <attr name="item_verticalSpacing" format="dimension" />
        <attr name="item_horizontalPadding" format="dimension" />
        <attr name="item_verticalPadding" format="dimension" />

        <attr name="item_textColor" format="color" />
        <attr name="item_selectedTextColor" format="reference|color" />
        <attr name="item_textSize" format="dimension" />

        <!-- 边框圆角半径-->
        <attr name="item_radius" format="dimension" />
        <attr name="item_bottomLeftRadius" format="dimension" />
        <attr name="item_bottomRightRadius" format="dimension" />
        <attr name="item_topLeftRadius" format="dimension" />
        <attr name="item_topRightRadius" format="dimension" />
        <!-- 边框颜色-->
        <attr name="item_strokeColor" format="reference|color" />
        <attr name="item_selectedStrokeColor" format="reference|color" />
        <!-- 边框宽度-->
        <attr name="item_strokeWidth" format="dimension" />
        <!-- 是否多选-->
        <attr name="item_multiChooseable" format="boolean" />
        <attr name="item_singleLine" format="boolean" />

        <!--单位dp,为了适应wrap_content用integer-->
        <attr name="item_width" format="integer|enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_parent" value="-1" />
        </attr>
        <attr name="item_height" format="integer|enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_parent" value="-1" />
        </attr>
        <attr name="item_maxEms" format="integer" />
    </declare-styleable>
    <declare-styleable name="Themes">
        <attr name="MultiLineChooseLayoutTagsStyle" format="reference" />
    </declare-styleable>

    <!--新闻垂直滚动-->
    <declare-styleable name="MarqueeViewStyle">
        <attr name="mvInterval" format="integer|reference" />
        <attr name="mvAnimDuration" format="integer|reference" />
        <attr name="mvTextSize" format="dimension|reference" />
        <attr name="mvTextColor" format="color|reference" />
        <attr name="mvSingleLine" format="boolean" />
        <attr name="mvGravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TagCloudLinkView">
        <attr name="tagLayoutColor" format="color" />
        <attr name="tagTextColor" format="color" />
        <attr name="tagTextSize" format="dimension" />
        <attr name="isDeletable" format="boolean" />
        <attr name="deletableTextColor" format="color" />
        <attr name="deletableTextSize" format="dimension" />
    </declare-styleable>
</resources>